datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  student
  teacher
}

enum JustificanteStatus {
  pending
  approved
  rejected
}

enum EnrollmentStatus {
  pending
  approved
  rejected
}

enum AlertSeverity {
  low
  medium
  high
}

enum AlertType {
  low_mood
  absences
  low_average
  custom
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique @db.VarChar(190)
  password    String    @db.VarChar(255)
  fullName    String    @db.VarChar(190)
  role        Role
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  classes     Class[]   @relation("TeacherClasses")
  enrollments ClassEnrollment[]
  schedules   Schedule[]
  moodEntries MoodEntry[]
  justificantes Justificante[]
  weeklyPerceptions WeeklyPerception[]
  messagesSent Message[] @relation("TutorMessages")
  messagesReceived Message[] @relation("StudentMessages")
  alerts      Alert[]    @relation("StudentAlerts")
  resets      PasswordReset[]
}

model Class {
  id          Int       @id @default(autoincrement())
  teacher     User      @relation("TeacherClasses", fields: [teacherId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  teacherId   Int
  name        String    @db.VarChar(190)
  code        String    @unique @db.Char(8)
  createdAt   DateTime  @default(now())
  enrollments ClassEnrollment[]
  schedules   Schedule[]
  moodEntries MoodEntry[]
  justificantes Justificante[]
  weeklyPerceptions WeeklyPerception[]
  alerts      Alert[]    @relation("ClassAlerts")
  messages    Message[]
}

model ClassEnrollment {
  id         Int   @id @default(autoincrement())
  class      Class @relation(fields: [classId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  classId    Int
  student    User  @relation(fields: [studentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  studentId  Int
  createdAt  DateTime @default(now())
  status     EnrollmentStatus @default(pending)
  term       String  @db.VarChar(20) @default("2024Q1")

  @@unique([classId, studentId])
  @@unique([studentId, term])
}

model Schedule {
  id         Int      @id @default(autoincrement())
  class      Class    @relation(fields: [classId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  classId    Int
  student    User     @relation(fields: [studentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  studentId  Int
  fileName   String   @db.VarChar(255)
  fileUrl    String   @db.VarChar(500)
  uploadedAt DateTime @default(now())

  @@unique([classId, studentId])
}

model MoodEntry {
  id                Int      @id @default(autoincrement())
  class             Class    @relation(fields: [classId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  classId           Int
  student           User     @relation(fields: [studentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  studentId         Int
  moodDate          DateTime @default(now())
  dayLabel          String   @db.VarChar(40)
  moodValue         Int
  comment           String?
  scheduleFileName  String?  @db.VarChar(255)
  teacherRead       Boolean  @default(false)
  createdAt         DateTime @default(now())

  @@unique([studentId, moodDate])
}

model Justificante {
  id         Int      @id @default(autoincrement())
  class      Class    @relation(fields: [classId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  classId    Int
  student    User     @relation(fields: [studentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  studentId  Int
  type       String   @db.VarChar(50) @default("otro")
  imageName  String   @db.VarChar(255)
  imageUrl   String   @db.Text
  reason     String
  status     JustificanteStatus @default(pending)
  term       String   @db.VarChar(20) @default("2024Q1")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Subject {
  id    Int    @id @default(autoincrement())
  name  String @unique @db.VarChar(190)
  perceptions WeeklyPerception[]
}

model WeeklyPerception {
  id        Int      @id @default(autoincrement())
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  studentId Int
  class     Class    @relation(fields: [classId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  classId   Int
  subject   Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  subjectId Int
  week      Int
  level     String   @db.VarChar(50)
  note      String?
  createdAt DateTime @default(now())
}

model Message {
  id           Int      @id @default(autoincrement())
  class        Class?   @relation(fields: [classId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  classId      Int?
  toStudent    User?    @relation("StudentMessages", fields: [toStudentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  toStudentId  Int?
  fromTutor    User     @relation("TutorMessages", fields: [fromTutorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  fromTutorId  Int
  title        String   @db.VarChar(190)
  body         String
  createdAt    DateTime @default(now())
}

model Alert {
  id          Int      @id @default(autoincrement())
  student     User     @relation("StudentAlerts", fields: [studentId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  studentId   Int
  class       Class?   @relation("ClassAlerts", fields: [classId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  classId     Int?
  type        AlertType
  description String
  severity    AlertSeverity @default(low)
  resolved    Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId    Int
  token     String   @unique @db.Char(64)
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}
